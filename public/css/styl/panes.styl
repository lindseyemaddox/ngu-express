/* ---------- staff image ----------*/




.name
  opacity: 0

.staff
  height: 28vh
  position: relative

  img
    filter: grayscale(1)
    transition: filter 400ms ease
    z-index: 0

  & a
    bottom: 0
    color: $white
    position: absolute

    &:first-child
      filter: grayscale(0)
      z-index: 1

    &:hover,
    &.selected
      img
        filter: grayscale(0)
        // z-index: 2

      .name
        opacity: 1

    &.selected .name
      background-color: $light-blue
      z-index: 2

    &:first-child .name
      // background-color: $light-blue
      // z-index: 2

    &:hover .name
      z-index: 3

  .name
    background-color: $dark-blue
    font-size: .8em
    height: 10px
    left: 36%
    letter-spacing: 2px
    padding: 4px 15px 14px 40px
    position: absolute
    primary-type($sans, $light)
    text-transform: uppercase
    top: -50px
    transition: opacity 400ms ease
    white-space: nowrap
    width: auto
    z-index: 9

    &.bottom
      bottom: 17px
      top: inherit

      &:before
        top: -16px
        transform: rotate(180deg)

    &:before
      background: url(/images/pin.svg) no-repeat center left transparent
      content: ''
      display: block
      height: 50px
      left: -3px
      position: absolute
      top: -5px
      width: 50px

    &:hover
      color: $white
      cursor: pointer

