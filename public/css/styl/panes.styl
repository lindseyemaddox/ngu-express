/* ---------- staff bios ---------- */

.bio
  margin: 40px 0 0 27px
  position: relative

  &:after
    clear: both
    content: ''
    display: block

  &:before
    background: url(/images/pin.svg) no-repeat center left transparent
    content: ''
    display: block
    height: 50px
    left: -56px
    position: absolute
    top: -16px
    transform: rotate(-90deg)
    width: 50px

  h4.employee
    font-size: 0.9375em
    primary-type($sans, $semi-bold)
    letter-spacing: 3px
    line-height: 1.2em
    text-transform: uppercase

  h5.title
    font-size: 0.6875em
    primary-type($sans, $regular)
    letter-spacing: 1px
    line-height: 2.182em
    text-transform: uppercase

  a
    color: $white
    display: block
    font-size: 0.9375em
    primary-type($sans, $regular)
    line-height: 2em

    &:hover
      color: $lightest-blue

    &.email
      primary-type($sans, $bold)
      line-height: 2em

  .card
    float: left
    width: 32%

  .story
    float: left
    margin-left: 3%
    width: 65%

    p
      font-size: .9375em
      primary-type($serif, $regular)
      line-height: 1.6em
      padding-bottom: 20px


// ---------------------- perspective -----------------------

#perspective
  p.intro
    line-height: 1.5em

    &:nth-child(3)
      margin-top: 40px


// ---------------------- faq -----------------------

p.q
  font-size: 1.125em
  primary-type($serif, $medium)
  line-height: 1.333em
  padding-top: 36px

p.a
  font-size: 1em
  border-bottom: 1px solid rgba($white, .5)
  primary-type($sans, $light)
  line-height: 1.333em
  padding: 14px 0 36px


// ---------------------- forms -----------------------

.forms
  position: relative

#resources

  p.intro
    line-height: 1.25em
    margin-top: 75px

    &:first-of-type
      margin-top: 0

a.arrow
  color: $white
  display: block
  font-size: .8em
  letter-spacing: 2px
  margin-top: 20px
  primary-type($sans, $light)
  text-align: right
  text-transform: uppercase
  transition: color 400ms ease

  &:after
    content: "\e902"
    font-family: 'ngu'
    padding-left: 10px
    transition: all 400ms ease

  &:hover
    color: $gold

    &:after
      margin-right: -10px
      padding-left: 20px


// ---------------------- next arrowss -----------------------


a.next
  bottom: 8vh
  color: $white
  letter-spacing: 2px
  position: absolute
  primary-type($sans, $regular)
  right: 50%
  text-align: center
  text-transform: uppercase

  span
    animation: next 1s ease 3s infinite alternate
    color: $white
    left: 25%
    position: absolute
    top: 15px
    transform: rotate(90deg)
